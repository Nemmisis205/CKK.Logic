@{
}

<h2>Your Cart</h2>

@foreach (var item in Model.UOW.ShoppingCarts.GetProducts(205))
{
    <partial name="_CartCard" model="item" />
}

<h2>Total: @Model.UOW.ShoppingCarts.GetTotal(ViewBag.ShoppingCartId)</h2>

@using (Html.BeginForm("Checkout", "Shop", new { Id = ViewBag.CustomerId }, FormMethod.Get))
{
        <button type="submit" class="btn btn-primary">CheckOut</button>
}

